# 基本站点配置
baseURL = "https://zisai.com/"
theme = "stack"
title = "紫塞 zisai.com"
languageCode = "zh-CN"
languageName = "简体中文"
defaultContentLanguage = "zh-CN"
enableRobotsTXT = true
enableGitInfo = true
buildDrafts = false

# 语言定义
[languages]
  [languages.zh-CN]
    languageCode = "zh-CN"
    languageName = "简体中文"
    weight = 1
    title = "紫塞 zisai.com"

# 作者信息
[author]
  name = "SHENNAN"
  email = "mythflair@hotmail.com"
  link = "https://baike.baidu.com/item/%E6%B2%88%E6%A5%A0/49988317"
  avatar = "/images/avatar.jpg"

# 所有 params 配置合并在一个 [params] 表下
[params]
  # 首页优化配置
  [params.home]
    subtitle = "记录技术与思考的角落"
    recentPosts = 10
    showFeatured = true
    showCategories = true
    showTags = true

  # SEO 优化
  [params.seo]
    image = "/images/og-image.png"
    twitter = "@Mythflair"
    description = "紫塞 zisai.com - 分享技术、思考与生活"

  # 评论系统（Utterances）
  [params.comments]
    enabled = true
    repo = "Mythflair/zisai.com"
    issueTerm = "pathname"
    theme = "github-light"

  # 分析统计
  [params.analytics]
    google = "G-XXXXXX"
    enable = true

  # 社交链接
  [params.social]
    github = "Mythflair"
    email = "mythflair@hotmail.com"
    zhihu = "shen-nan-74"
    twitter = "Mythflair"

  # 文章目录配置
  [params.toc]
    enabled = true
    depth = 3
    sticky = true

  # 打赏功能
  [params.reward]
    enable = true
    wechat = "/images/wechat-reward.jpg"
    alipay = "/images/alipay-reward.jpg"

# 输出格式（移除 JSON 以避免警告）
[outputs]
  home = ["HTML", "RSS"]
  section = ["HTML", "RSS"]
  taxonomy = ["HTML", "RSS"]
  term = ["HTML", "RSS"]

# 缓存优化
[caches]
  [caches.assets]
    dir = ":cacheDir/:project"
    maxAge = "168h"

# Markdown 渲染配置
[markup]
  [markup.goldmark]
    [markup.goldmark.renderer]
      unsafe = true
  [markup.highlight]
    style = "monokai"
    lineNumbers = true

# 分类和标签配置
[taxonomies]
  category = "categories"
  tag = "tags"